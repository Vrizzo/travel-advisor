{
  "extends": "./tsconfig.json",
  "include": [
    "src/**/*.ts",
    "src/**/*.test.ts",
    "src/**/__tests__/**/*.ts",
    "src/test/**/*.ts"
  ],
  "compilerOptions": {
    "types": ["jest", "node"],
    "esModuleInterop": true,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "strictFunctionTypes": false,
    "skipLibCheck": true
  }
} 